@{
    ViewData["Title"] = "Travis Diamond's TEST Group";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="dashboard-content">
    <!-- Hero Image Section -->
    <div class="group-hero mb-4">
        <img src="https://images.unsplash.com/photo-1559827260-dc66d52bef19?w=1200&h=300&fit=crop" alt="Beach with palm trees" class="img-fluid w-100" style="max-height: 300px; object-fit: cover; border-radius: 0.5rem;">
        <div class="hero-overlay">
            <div class="d-flex justify-content-between align-items-end p-4">
                <div class="text-white">
                    <h4 class="mb-1">Travis Diamond</h4>
                    <h1 class="fw-bold mb-0">Travis Diamond's TEST Group</h1>
                    <p class="mb-0">Nov 8, 2025 to Nov 9, 2025</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Traveler Info -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h5 class="mb-0">All travelers <button class="btn btn-sm btn-link p-0 ms-2"><i class="bi bi-plus-circle"></i></button></h5>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabs Navigation -->
    <ul class="nav nav-tabs mb-4" id="groupTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="messages-tab" data-bs-toggle="tab" data-bs-target="#messages" type="button" role="tab">
                Group messages
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="files-tab" data-bs-toggle="tab" data-bs-target="#files" type="button" role="tab">
                Group files
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="tasks-tab" data-bs-toggle="tab" data-bs-target="#tasks" type="button" role="tab">
                Group tasks
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="status-tab" data-bs-toggle="tab" data-bs-target="#status" type="button" role="tab">
                Group status
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="notes-tab" data-bs-toggle="tab" data-bs-target="#notes" type="button" role="tab">
                Group notes
            </button>
        </li>
        <li class="nav-item ms-auto">
            <button class="btn btn-outline-secondary">
                <i class="bi bi-three-dots"></i>
            </button>
            <button class="btn btn-primary ms-2">
                Create...
            </button>
        </li>
    </ul>

    <!-- Tab Content -->
    <div class="tab-content" id="groupTabsContent">
        <!-- Group Messages Tab -->
        <div class="tab-pane fade show active" id="messages" role="tabpanel">
            <div class="row">
                <div class="col-md-8">
                    <div class="text-center py-5 text-muted">
                        <p>No messages yet</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <!-- Group Itinerary Sidebar -->
                    <div class="card border-0 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h5 class="mb-0">Group itinerary</h5>
                                <i class="bi bi-question-circle text-muted"></i>
                            </div>

                            <div class="text-center py-5">
                                <i class="bi bi-plus-circle text-primary" style="font-size: 2rem;"></i>
                                <p class="text-primary mb-0 mt-2">Create itinerary</p>
                            </div>

                            <hr>

                            <div class="mb-3">
                                <i class="bi bi-check-circle text-success"></i>
                                <span class="ms-2">Set up your group</span>
                            </div>

                            <ol class="ps-3">
                                <li class="mb-3">
                                    <strong>Outline trip details</strong> in a group itinerary with items like lodging and activities.
                                    <br>
                                    <a href="#" class="text-decoration-none">Create a group itinerary <i class="bi bi-arrow-right"></i></a>
                                </li>
                                <li class="mb-3">
                                    <strong>Publicize your trip</strong> by connecting your group itinerary to a group booking page.
                                    <br>
                                    <a href="#" class="text-decoration-none">Create a group booking page <i class="bi bi-arrow-right"></i></a>
                                </li>
                                <li class="mb-3">
                                    <strong>Invite clients to book</strong> by connecting items in your group itinerary to trip packages.
                                    <br>
                                    <a href="#" class="text-decoration-none">Add packages <i class="bi bi-arrow-right"></i></a>
                                </li>
                            </ol>

                            <p class="text-muted small mt-3">
                                Use groups to organize multiple client trips together.
                                <a href="#" class="text-decoration-none">Learn more about groups and payments</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Group Files Tab -->
        <div class="tab-pane fade" id="files" role="tabpanel">
            <div class="text-center py-5 text-muted">
                <p>No files uploaded yet</p>
            </div>
        </div>

        <!-- Group Tasks Tab -->
        <div class="tab-pane fade" id="tasks" role="tabpanel">
            <div class="text-center py-5 text-muted">
                <p>No tasks created yet</p>
            </div>
        </div>

        <!-- Group Status Tab -->
        <div class="tab-pane fade" id="status" role="tabpanel">
            <div class="text-center py-5 text-muted">
                <p>No status updates</p>
            </div>
        </div>

        <!-- Group Notes Tab -->
        <div class="tab-pane fade" id="notes" role="tabpanel">
            <div class="text-center py-5 text-muted">
                <p>No notes added yet</p>
            </div>
        </div>
    </div>
</div>

<style>
.group-hero {
    position: relative;
    border-radius: 0.5rem;
    overflow: hidden;
}

.hero-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(to top, rgba(0,0,0,0.7), transparent);
}

.nav-tabs {
    border-bottom: 2px solid #dee2e6;
}

.nav-tabs .nav-link {
    border: none;
    border-bottom: 3px solid transparent;
    color: #6c757d;
    font-weight: 500;
}

.nav-tabs .nav-link:hover {
    border-color: transparent;
    color: #0d6efd;
}

.nav-tabs .nav-link.active {
    border-color: #0d6efd;
    color: #0d6efd;
    background: transparent;
}
</style>
