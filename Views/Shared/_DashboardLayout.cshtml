<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TravelBliss</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/contacts.css" asp-append-version="true" />
</head>
<body class="dashboard-body">
    <!-- Top Navigation Bar -->
    <nav class="dashboard-topbar">
        <div class="d-flex align-items-center justify-content-between w-100">
            <div class="d-flex align-items-center flex-grow-1">
                <a href="@Url.Action("Index", "Dashboard")" class="navbar-brand fw-bold text-primary me-4" style="font-style: italic; font-size: 1.5rem;">TravelBliss</a>
                <div class="search-box">
                    <i class="bi bi-search"></i>
                    <input type="text" class="form-control" placeholder="Search clients, trips, groups, or invoices...">
                </div>
            </div>
            <div class="d-flex align-items-center gap-3">
                <div class="setup-indicator">
                    <span class="badge bg-info">20%</span>
                    <span class="ms-1">SETUP</span>
                    <i class="bi bi-circle-fill text-info"></i>
                </div>
                <button class="btn btn-link text-dark">
                    <i class="bi bi-bell-fill"></i>
                </button>
                <div class="dropdown">
                    <button class="btn btn-link text-dark dropdown-toggle" type="button" data-bs-toggle="dropdown">
                        <i class="bi bi-person-circle"></i> Travis Diamond
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="#">Profile</a></li>
                        <li><a class="dropdown-item" href="#">Settings</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="@Url.Action("Index", "Home")">Sign out</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <div class="dashboard-container">
        <!-- Sidebar -->
        <div class="dashboard-sidebar">
            <div class="p-3">
                <button class="btn btn-primary w-100 mb-3">
                    <i class="bi bi-plus-lg"></i> New
                </button>
            </div>
            <nav class="sidebar-nav">
                <a href="@Url.Action("Index", "Dashboard")" class="sidebar-nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Dashboard" ? "active" : "")">
                    <i class="bi bi-house-door-fill"></i>
                    <span>Dashboard</span>
                </a>
                <a href="@Url.Action("Index", "Tasks")" class="sidebar-nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Tasks" ? "active" : "")">
                    <i class="bi bi-check2-square"></i>
                    <span>Tasks</span>
                </a>
                <a href="@Url.Action("Index", "Calendar")" class="sidebar-nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Calendar" ? "active" : "")">
                    <i class="bi bi-calendar3"></i>
                    <span>Calendar</span>
                </a>
                <a href="@Url.Action("Index", "Contacts")" class="sidebar-nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Contacts" ? "active" : "")">
                    <i class="bi bi-people"></i>
                    <span>Contacts</span>
                </a>
                <a href="#" class="sidebar-nav-item">
                    <i class="bi bi-file-earmark-text"></i>
                    <span>Templates</span>
                </a>
                <a href="#" class="sidebar-nav-item">
                    <i class="bi bi-bar-chart-fill"></i>
                    <span>Reports</span>
                </a>
                <a href="#" class="sidebar-nav-item">
                    <i class="bi bi-gear-fill"></i>
                    <span>Settings</span>
                </a>
            </nav>
            <div class="sidebar-footer">
                <a href="#" class="text-decoration-none text-muted">
                    <i class="bi bi-question-circle"></i> Help center
                </a>
            </div>
        </div>

        <!-- Main Content -->
        <div class="dashboard-main">
            @RenderBody()
        </div>
    </div>

    <!-- Chat Widget -->
    <div class="chat-widget">
        <button class="chat-button">
            <i class="bi bi-chat-dots-fill"></i>
        </button>
        <span class="chat-text">Hi. Need any help?</span>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
