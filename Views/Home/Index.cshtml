@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section -->
<section class="hero-section text-center py-5">
    <div class="container">
        <div class="icon-badges mb-4">
            <span class="icon-badge bg-teal"><i class="bi bi-airplane"></i></span>
            <span class="icon-badge bg-purple"><i class="bi bi-calendar-check"></i></span>
            <span class="icon-badge bg-cyan"><i class="bi bi-globe"></i></span>
            <span class="icon-badge bg-green"><i class="bi bi-journal-text"></i></span>
        </div>
        <h1 class="display-3 fw-bold mb-3">The all-in-one platform for travel advisors</h1>
        <p class="lead text-muted mb-4">Streamline your travel business with CRM, itineraries, and payments, all in one place</p>
        <a href="#" class="btn btn-pink btn-lg px-5 py-3">Get started for free</a>
        <p class="text-muted mt-3 small">7-day free trial • No credit card required • Cancel any time</p>
    </div>
</section>

<!-- AI Section -->
<section class="ai-section py-5 bg-light">
    <div class="container">
        <div class="text-center mb-4">
            <p class="text-muted mb-2">Plan with the power of AI</p>
            <h2 class="display-5 fw-bold">Build your next itinerary<br><span class="text-primary">in seconds, not hours</span></h2>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="ai-demo-card">
                    <div class="card shadow-lg border-0 rounded-4">
                        <div class="card-body p-5 bg-gradient-cyan text-center">
                            <p class="lead text-white">AI-powered itinerary builder demo would go here</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="features-section py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="display-5 fw-bold">Streamline your business. <span class="text-primary">Wow your clients.</span></h2>
            <p class="lead text-muted">Spend less time on process and paperwork with the platform<br>custom-built for travel planning professionals.</p>
        </div>
        <div class="row g-4">
            <div class="col-md-6">
                <div class="feature-card card border-purple shadow-sm rounded-4 h-100">
                    <div class="card-body p-4 text-center">
                        <div class="feature-icon mb-3">
                            <i class="bi bi-pencil-square fs-1 text-purple"></i>
                        </div>
                        <h4 class="fw-bold text-purple">Save time</h4>
                        <p class="text-muted">No more clicking, copying, and pasting across different tools.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="feature-card card border-purple shadow-sm rounded-4 h-100">
                    <div class="card-body p-4 text-center">
                        <div class="feature-icon mb-3">
                            <i class="bi bi-star fs-1 text-purple"></i>
                        </div>
                        <h4 class="fw-bold text-purple">Look professional</h4>
                        <p class="text-muted">Easily create beautiful itineraries and polished, branded emails.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="feature-card card border-teal shadow-sm rounded-4 h-100">
                    <div class="card-body p-4 text-center">
                        <div class="feature-icon mb-3">
                            <i class="bi bi-credit-card fs-1 text-teal"></i>
                        </div>
                        <h4 class="fw-bold text-teal">Simplify payments</h4>
                        <p class="text-muted">Securely process invoices, authorizations, and payments.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="feature-card card border-purple shadow-sm rounded-4 h-100">
                    <div class="card-body p-4 text-center">
                        <div class="feature-icon mb-3">
                            <i class="bi bi-list-check fs-1 text-purple"></i>
                        </div>
                        <h4 class="fw-bold text-purple">Stay organized</h4>
                        <p class="text-muted">Automated tasks and reminders ensure nothing slips through the cracks.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Testimonial Section -->
<section class="testimonial-section py-5 bg-teal text-white">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="text-center">
                    <h3 class="display-6 mb-4">Thousands of travel pros <span class="text-danger">love</span> TravelBliss</h3>
                    <div class="card bg-cyan border-0 rounded-4 p-5 text-white">
                        <blockquote class="mb-4">
                            <p class="lead">"The workflows with automations freed up so much time that <strong>I was able to double my sales.</strong>"</p>
                        </blockquote>
                        <div class="d-flex align-items-center justify-content-center">
                            <div class="testimonial-avatar bg-white rounded-circle me-3" style="width: 60px; height: 60px;"></div>
                            <div class="text-start">
                                <p class="mb-0 fw-bold">Korrine Johnson</p>
                                <p class="mb-0 small">Travel Biz Boss</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="cta-section py-5 bg-teal text-white text-center">
    <div class="container">
        <h2 class="display-5 fw-bold mb-3">Plan more trips in fewer steps</h2>
        <p class="lead mb-4">Join the thousands of travel advisors who use TravelBliss to level up<br>their productivity and professionalism.</p>
        <a href="#" class="btn btn-white btn-lg px-5 py-3">Get started for free</a>
        <p class="mt-3 small">7-day free trial • No credit card required • Cancel any time</p>
    </div>
</section>
